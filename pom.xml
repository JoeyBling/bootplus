                            <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
                            <formatPreferences>
                                <pretty/>
                            </formatPreferences>
                        </configuration>
                    </execution>
                </executions>-->
            </plugin>
        </plugins>
        <finalName>bootplus</finalName>
    </build>

